{
  "manifest_version": 3,
  "name": "Sentiment Analysis Agent V2",
  "description": "Highlight text → right‑click → Analyze Sentiment. Shows analysis and agent-generated rewrites.",
  "version": "1.1",
  "permissions": [
    "contextMenus",
    "activeTab",
    "scripting",
    "storage"
  ],
  "host_permissions": [
    "http://localhost:5001/*",
    "http://127.0.0.1:5001/*"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": [
        "<all_urls>"
      ],
      "js": [
        "content.js"
      ],
      "run_at": "document_end"
    }
  ],
  "action": {
    "default_title": "Sentiment Analysis Agent V2",
    "default_popup": "popup.html"
  }
}